<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.DashboardController">
   <children>
      <Label layoutX="194.0" layoutY="14.0" text="Dashboard">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <ImageView fitHeight="339.0" fitWidth="614.0" layoutY="299.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/web.jpg" />
         </image>
      </ImageView>
      <ComboBox fx:id="clientCombox" layoutX="120.0" layoutY="121.0" onAction="#comboxChange" prefHeight="36.0" prefWidth="125.0" promptText="Select" />
      <Label layoutX="45.0" layoutY="121.0" prefHeight="36.0" prefWidth="91.0" text="Choise :">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="resultCombox" layoutX="414.0" layoutY="121.0" prefHeight="36.0" prefWidth="166.0" />
      <TextField fx:id="addItem" layoutX="45.0" layoutY="187.0" promptText="Entrer your item" />
      <Button layoutX="45.0" layoutY="221.0" mnemonicParsing="false" onAction="#addItemButton" prefHeight="25.0" prefWidth="125.0" text="Add Item" />
      <ListView fx:id="listView" layoutX="390.0" layoutY="42.0" prefHeight="166.0" prefWidth="186.0" />
      <Button fx:id="btnSelected" layoutX="390.0" layoutY="216.0" mnemonicParsing="false" onAction="#handleBtnSelected" prefHeight="36.0" prefWidth="186.0" text="Show Selected" />
      <Label fx:id="choise" layoutX="376.0" layoutY="266.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
